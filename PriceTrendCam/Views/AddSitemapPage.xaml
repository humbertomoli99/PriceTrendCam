<Page
    x:Class="PriceTrendCam.Views.AddSitemapPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:PriceTrendCam.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:interactions="using:Microsoft.Xaml.Interactions.Core"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="ContentArea" Margin="{StaticResource NavigationViewPageContentMargin}">
        <Grid>
            <ScrollViewer>
                <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Top">
                    <Grid MaxWidth="800">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="1*" />
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Margin="0,16">
                            <Grid
                                Background="{ThemeResource LayerFillColorDefaultBrush}"
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1,1,1,1"
                                CornerRadius="5,5,5,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <StackPanel
                                    Grid.Column="0"
                                    Width="172"
                                    Height="172"
                                    Margin="{StaticResource MediumLeftTopRightBottomMargin}"
                                    BorderBrush="#FFC5C2C2"
                                    BorderThickness="1,1,1,1"
                                    CornerRadius="5,5,5,5">
                                    <Image
                                        x:Name="FaviconUrl"
                                        Width="170"
                                        Height="170"
                                        Stretch="Uniform" />
                                </StackPanel>
                                <StackPanel
                                    Grid.Column="1"
                                    Margin="{StaticResource MediumTopRightBottomMargin}"
                                    VerticalAlignment="Stretch">
                                    <TextBlock x:Name="MetaTitle" Style="{StaticResource TitleTextBlockStyle}" />
                                    <TextBlock x:Name="MetaDescription" Style="{StaticResource BodyTextStyle}" />
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                        <StackPanel
                            Grid.Row="1"
                            Margin="0,16"
                            Padding="{StaticResource MediumLeftTopRightBottomMargin}"
                            Background="{ThemeResource LayerFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="6">
                            <StackPanel Margin="0,6">
                                <TextBox
                                    x:Name="TextBoxStoreName"
                                    Grid.Row="1"
                                    Header="Sitemap Name"
                                    PlaceholderText="Sitemap Name(Optional)"
                                    Text="{x:Bind ViewModel.TextBoxStoreName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                <!--<controls:ValidationTextBox
                                    HeaderText="Sitemap Name"
                                    PropertyName="StoreName"
                                    PlaceholderText="Sitemap Name"
                                    Text="{x:Bind ViewModel.TextBoxStoreName, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />-->
                            </StackPanel>
                            <StackPanel Margin="0,6">
                                <StackPanel
                                    Name="textBoxesStackPanel"
                                    Grid.Row="1"
                                    HorizontalAlignment="Stretch" />
                            </StackPanel>
                            <StackPanel Margin="0,6">
                                <ComboBox
                                    Width="200"
                                    Header="Web Browser Drive"
                                    ItemsSource="{x:Bind SelectedWebBrowserDrive, Mode=TwoWay}"
                                    PlaceholderText="Pick a Web Drive"
                                    SelectedItem="{x:Bind ViewModel.SelectedWebBrowserDrive, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            </StackPanel>
                            <StackPanel Margin="0,6">
                                <TextBox
                                    x:Name="TextBoxEncoding"
                                    Grid.Row="1"
                                    Header="Encoding"
                                    PlaceholderText="Encoding (Optional)"
                                    Text="{x:Bind ViewModel.TextBoxEncoding, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            </StackPanel>
                            <StackPanel Margin="0,6">
                                <TextBox
                                    x:Name="TextBoxUserAgent"
                                    Grid.Row="1"
                                    Header="User Agent"
                                    PlaceholderText="User Agent (Optional)"
                                    Text="{x:Bind ViewModel.TextBoxUserAgent, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            </StackPanel>
                            <StackPanel Margin="0,6">
                                <TextBox
                                    x:Name="TextBoxCookie"
                                    Grid.Row="1"
                                    Header="Cookie"
                                    PlaceholderText="Cookie (Optional)"
                                    Text="{x:Bind ViewModel.TextBoxCookie, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            </StackPanel>
                            <StackPanel Margin="0,6">
                                <ComboBox
                                    Width="200"
                                    Header="Decompresion Method"
                                    ItemsSource="{x:Bind DecompresionMethodComboBox, Mode=TwoWay}"
                                    PlaceholderText="Pick a method"
                                    SelectedItem="{x:Bind ViewModel.DecompresionMethod, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            </StackPanel>
                            <StackPanel Margin="0,6">
                                <Button
                                    Name="SaveStore"
                                    Click="Guardar_Click"
                                    Command="{x:Bind ViewModel.SaveSitemapCommand}"
                                    Content="Add Sitemap"
                                    Style="{StaticResource AccentButtonStyle}" />
                            </StackPanel>
                            <StackPanel Margin="0,6">
                                <!--  Popups  -->
                                <Grid>
                                    <InfoBar
                                        x:Name="SuccessInfoBar"
                                        Title="Success"
                                        Message="The form was filled in correctly."
                                        Severity="Success">
                                        <interactivity:Interaction.Behaviors>
                                            <interactions:EventTriggerBehavior EventName="FormSubmissionCompleted" SourceObject="{x:Bind ViewModel}">
                                                <interactions:ChangePropertyAction
                                                    PropertyName="IsOpen"
                                                    TargetObject="{x:Bind SuccessInfoBar}"
                                                    Value="True" />
                                                <interactions:ChangePropertyAction
                                                    PropertyName="IsOpen"
                                                    TargetObject="{x:Bind FailureInfoBar}"
                                                    Value="False" />
                                            </interactions:EventTriggerBehavior>
                                        </interactivity:Interaction.Behaviors>
                                    </InfoBar>
                                    <InfoBar
                                        x:Name="FailureInfoBar"
                                        Title="Error"
                                        Message="The form was filled in with some errors."
                                        Severity="Error">
                                        <InfoBar.ActionButton>
                                            <Button Command="{x:Bind ViewModel.ShowErrorsCommand}" Content="Show errors" />
                                        </InfoBar.ActionButton>
                                        <interactivity:Interaction.Behaviors>
                                            <interactions:EventTriggerBehavior EventName="FormSubmissionFailed" SourceObject="{x:Bind ViewModel}">
                                                <interactions:ChangePropertyAction
                                                    PropertyName="IsOpen"
                                                    TargetObject="{x:Bind SuccessInfoBar}"
                                                    Value="False" />
                                                <interactions:ChangePropertyAction
                                                    PropertyName="IsOpen"
                                                    TargetObject="{x:Bind FailureInfoBar}"
                                                    Value="True" />
                                            </interactions:EventTriggerBehavior>
                                        </interactivity:Interaction.Behaviors>
                                    </InfoBar>
                                </Grid>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>
