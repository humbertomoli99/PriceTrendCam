<Page
    x:Class="PriceTrendCam.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:behaviors="using:PriceTrendCam.Behaviors"
    behaviors:NavigationViewHeaderBehavior.HeaderMode="Never"
    GotFocus="Page_GotFocus"
    mc:Ignorable="d">

    <Grid>
        <Grid.Resources>
            <FontFamily
                x:Key="BootstrapIcons">/Assets/Fonts/bootstrap-icons.ttf#bootstrap-icons</FontFamily>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid
            Grid.Row="0"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            BorderThickness="1,1,1,1"
            Height="300"
            CornerRadius="6,0,6,6"
            VerticalAlignment="Top">
            <Grid.Background>
                <LinearGradientBrush
                    StartPoint="0,1"
                    EndPoint="1,0">
                    <GradientStop
                        Offset="0"
                        Color="#0065FF" />
                    <GradientStop
                        Offset="0.5"
                        Color="#0BE1FF" />
                    <GradientStop
                        Offset="1"
                        Color="#00FF98" />
                    <LinearGradientBrush.RelativeTransform>
                        <RotateTransform
                            Angle="120" />
                    </LinearGradientBrush.RelativeTransform>
                </LinearGradientBrush>
            </Grid.Background>
            <Grid
                VerticalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition
                        Height="Auto" />
                    <RowDefinition
                        Height="Auto" />
                </Grid.RowDefinitions>
                <TextBlock
                    VerticalAlignment="Center"
                    TextAlignment="Center"
                    Margin="{StaticResource SmallTopBottomMargin}"
                    Style="{StaticResource TitleTextBlockStyle}"
                    FontSize="32"
                    Grid.Row="0"
                    Text="Your ideal price is here" />
                <AutoSuggestBox
                    MaxWidth="600"
                    FontSize="20"
                    CornerRadius="20"
                    VerticalAlignment="Center"
                    Grid.Row="1"
                    Background="#18191b"
                    Margin="{StaticResource MediumBottomMargin}"
                    Style="{StaticResource DefaultAutoSuggestBoxStyle}"
                    QueryIcon="Find"
                    PlaceholderText="Search for products, brands or paste a link"
                    QuerySubmitted="{x:Bind ViewModel.AdvancedSearch}"
                    Text="{x:Bind ViewModel.TextBoxSearch, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            </Grid>
        </Grid>
        <ScrollViewer
            Grid.Row="1"
            VerticalAlignment="Top">
            <TabView
                VerticalAlignment="Top"
                IsAddTabButtonVisible="False"
                TabWidthMode="Equal">
                <TabViewItem
                    IsClosable="False"
                    Header="My Products">

                    <TabViewItem.IconSource>
                        <SymbolIconSource
                            Symbol="List" />
                    </TabViewItem.IconSource>
                    <Grid
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1,0,1,1"
                        CornerRadius="0,0,5,5"
                        Padding="{StaticResource MediumLeftTopRightBottomMargin}">
                        
                    </Grid>
                </TabViewItem>
                <TabViewItem
                    IsClosable="False"
                    Header="Top 100">

                    <TabViewItem.IconSource>
                        <FontIconSource
                            FontFamily="{StaticResource BootstrapIcons}"
                            Glyph="&#xF476;" />
                    </TabViewItem.IconSource>
                    <Grid
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1,0,1,1"
                        CornerRadius="0,0,5,5"
                        Padding="{StaticResource MediumLeftTopRightBottomMargin}">

                    </Grid>
                </TabViewItem>
                    <TabViewItem
                        IsClosable="False"
                        Header="Hot Offers">

                    <TabViewItem.IconSource>
                        <FontIconSource
                            FontFamily="{StaticResource BootstrapIcons}"
                            Glyph="&#xF7F6;" />
                    </TabViewItem.IconSource>
                    <Grid
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1,0,1,1"
                        CornerRadius="0,0,5,5"
                        Padding="{StaticResource MediumLeftTopRightBottomMargin}">

                    </Grid>
                </TabViewItem>
            </TabView>
        </ScrollViewer>
    </Grid>
</Page>
